<Window x:Class="QuickTechSystems.WPF.Views.DiscountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Discount" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Current Total -->
        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="Current Total:"
                     Margin="0,0,0,5"/>
            <TextBlock Text="{Binding CurrentTotal, StringFormat=C}"
                     FontSize="18"
                     FontWeight="Bold"/>
        </StackPanel>

        <!-- Discount Type Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Discount Type:"
                     Margin="0,0,0,5"/>
            <ComboBox SelectedIndex="{Binding DiscountType}">
                <ComboBoxItem Content="Percentage (%)"/>
                <ComboBoxItem Content="Amount ($)"/>
            </ComboBox>
        </StackPanel>

        <!-- Discount Input -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Discount Value:"
                     Margin="0,0,0,5"/>
            <TextBox Text="{Binding DiscountValue, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="18"
                    Padding="5"
                    PreviewTextInput="NumberValidationTextBox"/>
        </StackPanel>

        <!-- Final Amount Preview -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Final Amount:"
                     Margin="0,0,0,5"/>
            <TextBlock Text="{Binding FinalAmount, StringFormat=C}"
                     FontSize="18"
                     FontWeight="Bold"
                     Foreground="Green"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Apply" 
                    IsDefault="True"
                    Click="ApplyButton_Click"
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    IsCancel="True"
                    Width="80"
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>